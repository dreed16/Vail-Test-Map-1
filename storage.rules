rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Videos: Users can read/write their own videos
    match /videos/{userId}/{videoId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == userId
                   && request.resource.size < 200 * 1024 * 1024  // 200MB max
                   && request.resource.contentType.matches('video/.*');
    }
    
    // Pictures: Users can read/write their own pictures
    match /pictures/{userId}/{pictureId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == userId
                   && request.resource.size < 10 * 1024 * 1024  // 10MB max
                   && request.resource.contentType.matches('image/.*');
    }
    
    // Thumbnails: Users can read/write their own thumbnails (if needed in future)
    match /thumbnails/{userId}/{thumbnailId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == userId
                   && request.resource.size < 5 * 1024 * 1024  // 5MB max
                   && request.resource.contentType.matches('image/.*');
    }
    
    // Profile Pictures: Users can read/write their own profile pictures
    match /profilePictures/{userId}/{fileName} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == userId
                   && request.resource.size < 5 * 1024 * 1024  // 5MB max
                   && request.resource.contentType.matches('image/.*');
    }
    
    // Test folder: Allow authenticated users to test uploads
    match /test/{userId}/{fileName} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
